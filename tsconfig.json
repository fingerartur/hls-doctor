{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "outDir": "build",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types",
        ]
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
